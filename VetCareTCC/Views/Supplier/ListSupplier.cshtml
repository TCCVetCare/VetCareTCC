@{ 
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewBag.Title = "ListSupplier";
}

@model IEnumerable<VetCareTCC.Models.SupplierModel>

<main class="flex flex-col mt-20 pl-12 justify-center">
    <div class="pt-12 pr-4 md:pr-52 lg:pr-24 xl:pr-28 flex flex-row-reverse text-sm font-medium">
        <a class="w-10 h-10 inline-flex items-center justify-center border-none rounded-full bg-yellow-400 text-neutral-900" href="@Url.Action("CadSupplier", "Supplier")">
            <i class="material-icons">add</i>
        </a>
    </div>
    <div class="p-3">
        <div class="overflow-x-auto rounded">
            <table class="table-auto w-full">
                <thead class="text-xs font-semibold uppercase bg-purple-950 dark:bg-blue-300 text-gray-200 dark:text-neutral-900 border-b border-yellow-400 ">
                    <tr>
                        <th class="p-2 whitespace-nowrap">
                            <div class="font-semibold text-center">@Html.DisplayNameFor(model => model.idSupplier)</div>
                        </th>
                        <th class="p-2 whitespace-nowrap">
                            <div class="font-semibold text-center">@Html.DisplayNameFor(model => model.nameSupplier)</div>
                        </th>
                        <th class="p-2 whitespace-nowrap">
                            <div class="font-semibold text-center">@Html.DisplayNameFor(model => model.cnpjSupplier)</div>
                        </th>
                        <th class="p-2 whitespace-nowrap">
                            <div class="font-semibold text-center">Editar e Excluir</div>
                        </th>
                    </tr>
                </thead>
                <tbody class="text-sm divide-y text-neutral-900 dark:text-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td class="p-2 whitespace-nowrap bg-zinc-300 dark:bg-neutral-700">
                                <div class="flex items-center justify-center">
                                    <div class="font-medium text-gray-800">@Html.DisplayFor(modelItem => item.idSupplier)</div>
                                </div>
                            </td>
                            <td class="p-2 whitespace-nowrap bg-zinc-300 dark:bg-neutral-700">
                                <div class="text-center">@Html.DisplayFor(modelItem => item.nameSupplier)</div>
                            </td>
                            <td class="p-2 whitespace-nowrap bg-zinc-300 dark:bg-neutral-700">
                                <div class=" text-center">@Html.DisplayFor(modelItem => item.cnpjSupplier)</div>
                            </td>
                            <td class="p-2 whitespace-nowrap bg-zinc-300 dark:bg-neutral-700">
                                <div class="text-center text-purple-950">
                                    <a class="hover:underline" href="@Url.Action("UpdateSupplier", "Supplier", new {id = item.idSupplier})">Editar</a>
                                    <span class="">|</span>
                                    <a class="hover:underline" href="@Url.Action("DeleteSupplier", "Supplier", new {id = item.idSupplier})">Excluir</a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</main>